---
import Layout from "../layouts/Layout.astro";
import { projects } from "../projects";

import ProjectsMasterComponent from "../components/ProjectsMaster.tsx"

import { colorVariants } from "../colors.ts"
const colorVariant = [
  "blue",
  "green",
  "orange",
  "yellow",
][ Math.floor(Math.random()*(4)) ]
console.log(colorVariant);
---

<Layout title="Projects" description="Archive of recent projects by Yash Karthik" route="/projects" colorVariant={colorVariant}>
  <main class="
    max-sm:w-10/12 self-center
  ">
    <header class="
      text-start 
      mb-7
    ">
      <h1 class="
        sm:text-4xl text-4xl 
        font-heading font-bold font-serif-styled
        mb-3
      ">
        Projects
      </h1>

      <p class="
        mt-1
        text-md italic font-sans
        prose dark:prose-invert
      ">
        Robust, bleeding edge systems; <br>
        Random puzzles & scripts; <br>
        Graveyard of abandoned ideas.
      </p>
    </header>

    <ProjectsMasterComponent colorVariant={colorVariant} client:load />
  </main>
</Layout>
