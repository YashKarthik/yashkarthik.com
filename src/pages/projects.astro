---
import Layout from "../layouts/Layout.astro";
import { projects } from "../projects";
---

<Layout title="Projects" description="Archive of recent projects by Yash Karthik">
  <main class="
    self-center font-serif
    max-sm:w-10/12
  ">
    <header class="
      items-start text-start 
      mb-7
    ">
      <h1 class="
        sm:text-4xl text-3xl 
        font-serif-styled font-black
        mt-10 mb-7
      ">
        Projects
      </h1>

      <p class="
        mt-1
        text-md italic
        prose dark:prose-invert
      ">
        My side projects include web apps, smart contracts,
        CTF challenges, writing, and a smattering of personal workflow software.
      </p>
    </header>

    <article class="prose dark:prose-invert">
      {projects.map(project => (
        <article class="my-7">
        <h2 class="text-2xl font-serif-styled font-bold max-w-fit">{project.title}</h2>
          <p class="mb-3">{project.description}</p>
          <div class="flex flex-row gap-2 dark:text-zinc-400 ">
            { project.website && 
              <a href={project.website} target="_blank" class="
                text-sm italic
                underline underline-offset-2 decoration-2 decoration-dotted
                decoration-zinc-400 dark:decoration-zinc-500
                hover:decoration-violet-700 dark:hover:decoration-violet-400
              ">
                Visit
              </a>
            }
            <a href={project.github} target="_blank" class="
              text-sm italic
              underline underline-offset-2 decoration-2 decoration-dotted
              decoration-zinc-400 dark:decoration-zinc-500
              hover:decoration-violet-700 dark:hover:decoration-violet-400
            ">
              GitHub
            </a>
          </div>
        </article>
      ))}
    </article>
  </main>
</Layout>
